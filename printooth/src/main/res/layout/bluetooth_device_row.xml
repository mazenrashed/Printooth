<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/printooth_color_devices_row_background">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/pairedPrinter"
        android:textColor="@color/printooth_color_devices_row_foreground"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pairStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/printooth_color_devices_row_foreground"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/pairedPrinter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/pairStatus"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_print_black_24dp"
        app:tint="@color/printooth_color_devices_row_foreground"
        android:visibility="gone" />
</RelativeLayout>
